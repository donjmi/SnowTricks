                <a href="{{ path('admin.trick.edit', {id: trick.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Supprimer</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
